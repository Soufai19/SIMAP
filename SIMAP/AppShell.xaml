<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SIMAP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SIMAP.Views"
    xmlns:local="clr-namespace:SIMAP">

    <TabBar>

        <ShellContent
            Title="Inicio"
            Route="MainPage"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Productos"
            Route="ListaProductosPage"
            ContentTemplate="{DataTemplate views:ListaProductosPage}" />

        <ShellContent
            Title="Agregar"
            Route="AgregarProductoPage"
            ContentTemplate="{DataTemplate views:AgregarProductoPage}" />

    </TabBar>

</Shell>
